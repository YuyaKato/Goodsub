			public void run(){
				try {
					ServerSocket serverSocket = new ServerSocket(SEND_PORT);
					while(true){
						outputText(serverSocket);
					}
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				} catch (Exception e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}

			}
		};
		sth.start();
		
		while(true){
			
		}

		/*		
